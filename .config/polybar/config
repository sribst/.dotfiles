[module/alsa]
type = internal/alsa

format-volume = <ramp-volume> <bar-volume>
format-volume-foreground = ${colors.secondary}

format-muted = <bar-volume>
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.secondary}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

bar-volume-width = 10
bar-volume-gradient = false
bar-volume-foreground    = ${colors.tertiary}
bar-volume-foreground-0  = ${colors.tertiary}
bar-volume-foreground-1  = ${colors.tertiary}
bar-volume-foreground-2  = ${colors.tertiary}
bar-volume-foreground-3  = ${colors.tertiary}
bar-volume-foreground-4  = ${colors.tertiary}
bar-volume-foreground-5  = ${colors.tertiary}
bar-volume-foreground-6  = ${colors.yellow}
bar-volume-foreground-7  = ${colors.yellow}
bar-volume-foreground-8  = ${colors.yellow}
bar-volume-foreground-9  = ${colors.red}
bar-volume-foreground-10 = ${colors.red}

bar-volume-indicator = -
bar-volume-indicator-foreground = ${colors.tertiary}

bar-volume-fill = ━

bar-volume-empty = ┉
bar-volume-empty-foreground = ${color.be}

[module/bluetooth]
type = custom/script
exec = ~/.config/polybar/script/bluetooth.sh
tail = true
click-left = ~/.config/polybar/script/bluetooth.sh --toggle &
click-right = exec blueberry
format-padding = 1
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/memory]
type = internal/memory
interval = 3
format = <label>

format-prefix = " "
format-prefix-foreground = ${colors.secondary}

label = " %gb_used%"

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>

format-prefix = " "
format-prefix-foreground = ${colors.secondary}

label = %percentage%%

[module/temperature]
type = internal/temperature
interval = 0.5
format = <ramp> <label>

format-warn = <ramp> <label-warn>
label = %temperature-c%

label-warn = "%temperature-c% "

ramp-0 = " "
ramp-1 = " "
ramp-2 = " "
ramp-3 = " "
ramp-4 = " "
ramp-foreground = ${colors.secondary}

[module/battery0]
type = internal/battery
battery = BAT0
adapter = ACPI
poll-interval = 5

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%%
animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-3 = " "
animation-charging-4 = " "
animation-charging-framerate = 750
animation-charging-foreground = ${colors.secondary}

format-discharging = <animation-discharging> <label-discharging>
label-discharging = %percentage%% %time%

animation-discharging-0 = " "
animation-discharging-1 = " "
animation-discharging-2 = " "
animation-discharging-3 = " "
animation-discharging-4 = " "
animation-discharging-framerate = 750
animation-discharging-foreground = ${colors.secondary}

[module/date]
type = internal/date
interval = 5

time = %H:%M
date = %a %d
date-alt = %A, %B %d, %Y
time-alt = %H:%M:%S

label = %date%, %time%

format-prefix = " "
format-prefix-foreground = ${colors.secondary}

