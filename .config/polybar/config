[colors]
black         = ${xrdb:color0}
black-light   = ${xrdb:color8}
red           = ${xrdb:color1}
red-light     = ${xrdb:color9}
green         = ${xrdb:color2}
green-light   = ${xrdb:color10}
yellow        = ${xrdb:color3}
yellow-light  = ${xrdb:color11}
blue          = ${xrdb:color4}
blue-light    = ${xrdb:color12}
magenta       = ${xrdb:color5}
magenta-light = ${xrdb:color13}
cyan          = ${xrdb:color6}
cyan-light    = ${xrdb:color14}
white         = ${xrdb:color7}
white-light   = ${xrdb:color15}

background    = ${xrdb:background}
foreground    = ${xrdb:foreground}
cursor-color   = ${xrdb:cursorColor}

primary        = ${self.green}
secondary      = ${self.cyan}
tertiary       = ${self.blue}
mid            = ${self.yellow}
urgent         = ${self.red}
separator      = ${self.cyan}


