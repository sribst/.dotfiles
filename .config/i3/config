set $app App: (q) qutebrowser, (e) element, (w) wire-desktop, (s) slack
bindsym $super+c mode "$app"
mode "$app" {
          # These bindings trigger as soon as you enter the app mode
          bindsym e exec element-desktop
          bindsym q exec qutebrowser
          bindsym w exec wire-desktop
          bindsym s exec slack

          # back to normal: Enter or Escape or $super+r
          bindsym Return mode "default"
          bindsym Escape mode "default"
          bindsym $super+g mode "default"
          bindsym $super+c mode "default"
}


set $i3_resurrect i3-resurrect

# Save workspace mode.
set $save Save workspace: (&) , (é) , (\") ², ...
bindsym $super+u mode "save"
mode "save" {
         bindsym $super+ampersand  exec "$i3_resurrect save -w 1 --swallow=class,instance,title"
         bindsym $super+eacute     exec "$i3_resurrect save -w 2 --swallow=class,instance,title"
         bindsym $super+quotedbl   exec "$i3_resurrect save -w 3 --swallow=class,instance,title"
         bindsym $super+apostrophe exec "$i3_resurrect save -w 4 --swallow=class,instance,title"
         bindsym $super+parenleft  exec "$i3_resurrect save -w 5 --swallow=class,instance,title"
         bindsym $super+minus      exec "$i3_resurrect save -w 6 --swallow=class,instance,title"
         bindsym $super+egrave     exec "$i3_resurrect save -w 7 --swallow=class,instance,title"
         bindsym $super+underscore exec "$i3_resurrect save -w 8 --swallow=class,instance,title"
         bindsym $super+ccedilla   exec "$i3_resurrect save -w 9 --swallow=class,instance,title"
         bindsym $super+agrave     exec "$i3_resurrect save -w 10 --swallow=class,instance,title"

          # back to normal: Enter or Escape or $super+r
          bindsym Return mode "default"
          bindsym Escape mode "default"
          bindsym $super+g mode "default"
          bindsym $super+u mode "default"
}


# Restore workspace mode.
set $restore Restore workspace: (&) , (é) , (\") ², ...
bindsym $super+i mode "restore"
mode "restore" {
         bindsym $super+ampersand  exec "$i3_resurrect restore -w 1 --programs-only"
         bindsym $super+eacute     exec "$i3_resurrect restore -w 2 --programs-only"
         bindsym $super+quotedbl   exec "$i3_resurrect restore -w 3 --programs-only"
         bindsym $super+apostrophe exec "$i3_resurrect restore -w 4 --programs-only"
         bindsym $super+parenleft  exec "$i3_resurrect restore -w 5 --programs-only"
         bindsym $super+minus      exec "$i3_resurrect restore -w 6 --programs-only"
         bindsym $super+egrave     exec "$i3_resurrect restore -w 7 --programs-only"
         bindsym $super+underscore exec "$i3_resurrect restore -w 8 --programs-only"
         bindsym $super+ccedilla   exec "$i3_resurrect restore -w 9 --programs-only"
         bindsym $super+agrave     exec "$i3_resurrect restore -w 10 --programs-only"

         bindsym $super+ampersand  exec "$i3_resurrect restore -w 1 --layout-only"
         bindsym $super+eacute     exec "$i3_resurrect restore -w 2 --layout-only"
         bindsym $super+quotedbl   exec "$i3_resurrect restore -w 3 --layout-only"
         bindsym $super+apostrophe exec "$i3_resurrect restore -w 4 --layout-only"
         bindsym $super+parenleft  exec "$i3_resurrect restore -w 5 --layout-only"
         bindsym $super+minus      exec "$i3_resurrect restore -w 6 --layout-only"
         bindsym $super+egrave     exec "$i3_resurrect restore -w 7 --layout-only"
         bindsym $super+underscore exec "$i3_resurrect restore -w 8 --layout-only"
         bindsym $super+ccedilla   exec "$i3_resurrect restore -w 9 --layout-only"
         bindsym $super+agrave     exec "$i3_resurrect restore -w 10 --layout-only"

          # back to normal: Enter or Escape or $super+r
          bindsym Return mode "default"
          bindsym Escape mode "default"
          bindsym $super+g mode "default"
          bindsym $super+i mode "default"
}
